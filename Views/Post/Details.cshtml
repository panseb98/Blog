@model Blog.Models.ViewModel.PostViewModel
@{
  
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div class="row">

    <!-- Post Content Column -->
    <div class="col-lg-8">

        <!-- Title -->
        <h1 class="mt-4">@Model.Post.Title</h1>

        <!-- Author -->
        <p class="lead">
            by
            <a href="#">Start Bootstrap</a>
        </p>

        <hr>

        <!-- Date/Time -->
        <p>@Model.Post.Date</p>

        <hr>

        <!-- Preview Image -->
        <img class="img-fluid rounded" height="300px" width="900px" src="~/images/@Model.Post.Photo" alt="">

        <hr>

        <!-- Post Content -->



        <p>
            @Model.Post.Context
        </p>

        <hr>

        <!-- Comments Form -->
        <div class="card my-4">
            <h5 class="card-header">Leave a Comment:</h5>
            <div class="card-body">
                <form asp-action="CreateCom/@Model.Post.Id">
                    <div class="form-group">
                        <input asp-for="Comment.Email" class="form-control" />
                    </div>
                    <div class="form-group">
                        <textarea asp-for="Comment.Content" class="form-control" rows="3"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
        @foreach (var com in Model.Post.Comments)
        {
            
            <div class="media mb-4">
                <img class="d-flex mr-3 rounded-circle" src="http://placehold.it/50x50" alt="">
                <div class="media-body">
                    <h5 class="mt-0">@com.Author</h5>
                    <p>@com.Content</p>
                </div>
            </div>
            
        }
        <!-- Single Comment -->
        <!-- Comment with nested comments -->
        

    </div>
</div>